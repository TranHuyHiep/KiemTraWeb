@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
@model List<Cauthu>
@foreach(var item in Model)
{
    <div class="item">
        <div class="block-4 text-center">
            <figure class="block-4-image">
                <img src="@Url.Content("../images/" + item.Anh)" width="150" height="300" alt="Image placeholder" class="img-fluid">
            </figure>
            <div class="block-4-text p-4">
                <h3><a href="#">@item.HoVaTen</a></h3>
            </div>
            <a asp-action="suaCauThu" asp-route-cauThuId="@item.CauThuId">Edit</a>
        </div>
    </div>
}



